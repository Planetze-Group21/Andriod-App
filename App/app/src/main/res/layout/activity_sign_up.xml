<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@drawable/planetze_bg_no_logo"
    tools:context=".SignUpActivity">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="300sp"
        android:layout_height="80sp"
        android:layout_marginTop="60sp"
        android:layout_marginBottom="40sp"
        android:contentDescription="Logo"
        android:scaleType="fitStart"
        android:src="@drawable/planetze_logo_cropped" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/custom_edittext"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sign Up"
                android:textAlignment="center"
                android:textColor="@color/steel"
                android:textSize="36sp"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/last_name"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:layout_toRightOf="@+id/first_name"
                    android:autofillHints="name"
                    android:background="@drawable/custom_edittext"
                    android:drawablePadding="8dp"
                    android:hint="Last name          "
                    android:inputType="text"
                    android:padding="12dp"
                    android:textColor="@color/steel"
                    android:textColorHint="@color/mist" />

                <EditText
                    android:id="@+id/first_name"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="16dp"
                    android:autofillHints="name"
                    android:background="@drawable/custom_edittext"
                    android:drawablePadding="8dp"
                    android:hint="First name     "
                    android:inputType="text"
                    android:padding="12dp"
                    android:textColor="@color/steel"
                    android:textColorHint="@color/mist" />

            </RelativeLayout>

            <EditText
                android:id="@+id/signup_email"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:autofillHints="emailAddress"
                android:background="@drawable/custom_edittext"
                android:drawableLeft="@drawable/baseline_3p_24"
                android:drawablePadding="8dp"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:padding="12dp"
                android:textColor="@color/steel"
                android:textColorHint="@color/mist" />

            <EditText
                android:id="@+id/signup_password"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:autofillHints="password"
                android:background="@drawable/custom_edittext"
                android:drawableLeft="@drawable/baseline_create_24"
                android:drawablePadding="8dp"
                android:hint="Password"
                android:inputType="textVisiblePassword"
                android:padding="12dp"
                android:textColor="@color/steel"
                android:textColorHint="@color/mist" />


            <EditText
                android:id="@+id/reenter_password"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:autofillHints="password"
                android:background="@drawable/custom_edittext"
                android:drawableLeft="@drawable/baseline_create_24"
                android:drawablePadding="8dp"
                android:hint="Re-enter password"
                android:inputType="textVisiblePassword"
                android:padding="12dp"
                android:textColor="@color/steel"
                android:textColorHint="@color/mist" />

            <Button
                android:id="@+id/signup_button"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="30dp"
                android:backgroundTint="@color/steel"
                android:text="Sign up"
                android:textColor="@color/white"
                android:textSize="18sp"
                app:cornerRadius="20dp" />

            <TextView
                android:id="@+id/loginRedirectText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:padding="8dp"
                android:text="Have an account already? Log in."
                android:textColor="@color/steel"
                android:textSize="18sp" />

        </LinearLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>