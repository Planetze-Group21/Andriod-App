<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center"
    android:background="@drawable/planetze_bg_no_logo">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:contentDescription="Logo"
        android:src="@drawable/planetze_logo_cropped"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="30dp"
        android:scaleType="fitCenter" />


    <!-- Card for the Title and Message -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:gravity="center">

            <!-- Title -->
            <TextView
                android:id="@+id/introTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Carbon Footprint Calculator"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/navy"
                android:gravity="center"
                android:layout_marginBottom="16dp"
                android:fontFamily="@font/poppins_bold"/>

            <!-- Introduction Message -->
            <TextView
                android:id="@+id/introMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Let's get started! We will calculate your current carbon footprint based on your lifestyle. You only need to do this once."
                android:textSize="16sp"
                android:textColor="@color/charcoal"
                android:lineSpacingExtra="5dp"
                android:gravity="center"
                android:layout_marginBottom="16dp"
                android:fontFamily="@font/poppins_medium"/>

            <!-- Note Section -->
            <TextView
                android:id="@+id/introNote"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ’¡ Note: This setup only needs to be done once, unless you choose to recalculate later."
                android:textSize="14sp"
                android:textColor="@color/teal"
                android:gravity="center"
                android:fontFamily="@font/poppins_medium"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Button to Start -->
    <Button
        android:id="@+id/startButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:backgroundTint="@color/navy"
        android:layout_marginTop="20dp"
        android:padding="12dp"
        android:elevation="8dp"
        android:layout_gravity="center"
        android:fontFamily="@font/poppins_medium"/>
</LinearLayout>
