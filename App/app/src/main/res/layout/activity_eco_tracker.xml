                            android:layout_width="59dp"
                            android:layout_height="21dp"
                            android:layout_alignParentStart="true"
                            android:layout_marginStart="1dp"
                            android:src="@drawable/eco_tracker_car" />

                    </LinearLayout>

                    <LinearLayout
