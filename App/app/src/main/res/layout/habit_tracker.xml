<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardBackgroundColor="@color/mist"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    app:strokeWidth="0dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            app:cardBackgroundColor="@color/mist">

            <!-- Header Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_bold"
                android:text="Habit Tracker"
                android:textColor="@color/black"
                android:textSize="26sp"
                android:paddingBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text="Some eco-friendly habits for you!"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:background="@drawable/eco_tracker_activities_header"
                android:padding="8dp"
                android:layout_marginBottom="16dp" />

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/mist">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_bold"
                android:text="Filters:"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:paddingEnd="8dp"
                android:layout_marginBottom="8dp" />

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:rowCount="2"
                android:orientation="horizontal"
                android:padding="2dp"
                android:layout_marginBottom="16dp">

                <CheckBox
                    android:id="@+id/filterTransportation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Transportation"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:layout_marginEnd="2dp" />

                <CheckBox
                    android:id="@+id/filterConsumption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Consumption"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:layout_marginEnd="2dp" />

                <CheckBox
                    android:id="@+id/filterFood"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Food"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:layout_marginEnd="2dp" />

                <CheckBox
                    android:id="@+id/filterEnergy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Energy"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:layout_row="1"
                    android:layout_column="1"
                    android:layout_marginEnd="2dp" />
            </GridLayout>
</LinearLayout>
            <LinearLayout
                android:id="@+id/transportationSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/eco_tracker_activities_header"
                android:padding="8dp"
                android:layout_marginBottom="8dp"><!-- Title TextView -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Transportation"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:paddingBottom="8dp" />

                <!-- First List Item -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/eco_tracker_activities"
                    android:padding="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/habbittrans"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="3dp"
                        android:text="Try walking more!"
                        android:textColor="@color/black"
                        android:textSize="12sp" />
                </LinearLayout>



            </LinearLayout>

            <!-- Food Section -->
            <LinearLayout
                android:id="@+id/foodSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/eco_tracker_activities_header"
                android:padding="8dp"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Food"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:paddingBottom="8dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/eco_tracker_activities"
                    android:padding="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/habbitfood"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="3dp"
                        android:text="Eat more plant-based meals!"
                        android:textColor="@color/black"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Energy Section -->
            <LinearLayout
                android:id="@+id/energySection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/eco_tracker_activities_header"
                android:padding="8dp"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Energy"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:paddingBottom="8dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/eco_tracker_activities"
                    android:padding="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/habbitenergy"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="3dp"
                        android:text="Switch off unused lights!"
                        android:textColor="@color/black"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Consumption Section -->
            <LinearLayout
                android:id="@+id/consumptionSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/eco_tracker_activities_header"
                android:padding="8dp"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Consumption"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:paddingBottom="8dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/eco_tracker_activities"
                    android:padding="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/habbitcons"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="3dp"
                        android:text="Buy Less!"
                        android:textColor="@color/black"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/tracker1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/eco_tracker_activities">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="3dp"
                    android:text="Number of days you walked instead of driving!"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/TransTrack"
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:padding="3dp"
                    android:background="@color/steel"
                    android:gravity="center" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/tracker2"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/eco_tracker_activities">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="3dp"
                    android:text="Number of days you didn't shop!!"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/ConsTrack"

                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:padding="3dp"
                    android:background="@color/steel"
                    android:gravity="center" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/tracker3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/eco_tracker_activities">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="3dp"
                    android:text="Number of days you ate Plant-based!"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/foodTrack"
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:padding="3dp"
                    android:background="@color/steel"
                    android:gravity="center" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/tracker4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/eco_tracker_activities">

                <TextView
                    android:id="@+id/energyTrack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="3dp"
                    android:text="Trial_text"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

            </LinearLayout>





        </LinearLayout>
    </ScrollView>
</com.google.android.material.card.MaterialCardView>