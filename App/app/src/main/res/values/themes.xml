<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.PlanetzeApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/charcoal</item>
        <item name="colorSecondary">@color/mist</item>
        <item name="android:buttonStyle">@style/CustomButton</item>


    </style>

    <style name="Theme.PlanetzeApp" parent="Base.Theme.PlanetzeApp" />

    <style name="Theme.PlanetzeApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.PlanetzeApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.PlanetzeApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>